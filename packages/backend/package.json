{
  "name": "@instinct-prj/backend",
  "version": "0.2.0",
  "main": "build/",
  "scripts": {
    "build": "tsc -p .",
    "deploy:unsafe": "npm run build && cp package.json build/package.json && cp package-lock.json build/package-lock.json && npm publish build",
    "deploy": "npm run clean && npm run test && npm run deploy:unsafe",
    "test": "tsc && jest --coverage --forceExit && npm run clean",
    "start": "ts-node src/main.ts",
    "clean": "rm -rf build"
  },
  "dependencies": {
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.4.4",
    "@nestjs/typeorm": "^7.1.4",
    "@sendgrid/mail": "^7.3.0",
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "crypto-random-string": "^3.3.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mysql2": "^2.2.5",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "randomstring": "^1.1.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "typeorm": "^0.2.28",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/core": "^7.4.4",
    "@nestjs/testing": "^7.4.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/randomstring": "^1.1.6",
    "@types/sinon": "^9.0.8",
    "@types/supertest": "^2.0.10",
    "dotenv": "^8.2.0",
    "jest": "^26.6.1",
    "sinon": "^9.2.1",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "~4.0.5"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/core": "^7.4.4",
    "typescript": "~4.0.5"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "roots": [
      "src/"
    ],
    "setupFiles": [],
    "testEnvironment": "node",
    "transform": {
      ".*.ts": "ts-jest",
      ".*.tsx": "ts-jest"
    }
  }
}
