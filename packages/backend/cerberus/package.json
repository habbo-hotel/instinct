{
  "name": "@instinct-prj/cerberus",
  "version": "1.2.0",
  "main": "dist/index.js",
  "types": "dist/types",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn run clean && yarn run compile",
    "clean": "rimraf -rf ./dist && rimraf -rf ./build",
    "compile": "NODE_OPTIONS=--max_old_space_size=4096 rollup -c && yarn run compile:types",
    "compile:types": "tsc -d -p tsconfig.build.json --emitDeclarationOnly --declarationDir dist/types",
    "prepublishOnly": "yarn run build"
  },
  "dependencies": {
    "class-validator": "^0.12.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/core": "^7.4.4",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/node": "^14.14.6",
    "rimraf": "^3.0.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typescript": "~4.0.5"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.4.4",
    "@nestjs/core": "^7.4.4",
    "typescript": "~4.0.5"
  }
}
