{
  "version": "0.2.3",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "release %"
    },
    "bootstrap": {
      "ignore": "apps",
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  },
  "packages": [
    "packages/*"
  ],
  "publishConfig": {
    "directory": "build"
  }
}
