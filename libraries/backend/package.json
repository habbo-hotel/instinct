{
  "name": "instinct-backend",
  "version": "0.0.1",
  "description": "Shared Nest logic across Instinct apps",
  "main": "build/",
  "scripts": {
    "build": "tsc -p .",
    "deploy:unsafe": "gts clean && npm run build && cp README.md build/README.md && cp package.json build/package.json && cp package-lock.json build/package-lock.json && npm publish build",
    "deploy": "gts clean && npm run test && npm run deploy:unsafe",
    "fix": "gts clean && gts fix",
    "test": "gts clean && tsc && gts check && jest --coverage --forceExit && gts clean",
    "start:example": "gts clean && ts-node src/nest/example.ts"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.4",
    "@nestjs/core": "^6.11.4",
    "express": "^4.17.1",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/platform-express": "^6.11.4",
    "@nestjs/testing": "^6.11.4",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.7",
    "@types/sinon": "^7.5.1",
    "dotenv": "^8.2.0",
    "gts": "^1.1.2",
    "jest": "^24.9.0",
    "sinon": "^8.1.1",
    "ts-jest": "^24.3.0",
    "ts-node": "8.5.4",
    "tsconfig-paths": "3.9.0",
    "tslint": "^5.20.1",
    "typescript": "~3.7.5"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "roots": [
      "src/"
    ],
    "setupFiles": [],
    "testEnvironment": "node",
    "transform": {
      ".*.ts": "ts-jest",
      ".*.tsx": "ts-jest"
    }
  }
}
