{
  "name": "instinct-backend",
  "version": "0.0.2",
  "description": "Shared Nest logic across Instinct apps",
  "main": "build/",
  "scripts": {
    "build": "tsc -p .",
    "deploy:unsafe": "gts clean && npm run build && cp package.json build/package.json && cp package-lock.json build/package-lock.json && npm publish build",
    "deploy": "gts clean && npm run test && npm run deploy:unsafe",
    "fix": "gts clean && gts fix",
    "test": "gts clean && tsc && gts check && jest --coverage --forceExit && gts clean",
    "start:example": "gts clean && ts-node src/nest/example.ts",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run check"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.9",
    "@nestjs/core": "^7.0.9",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.0.9",
    "@nestjs/serve-static": "^2.1.0",
    "@nestjs/typeorm": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.12.2",
    "express": "^4.17.1",
    "instinct-interfaces": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.25.3",
    "passport-jwt": "^4.0.0",
    "randomstring": "^1.1.5",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.24",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.0.9",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@types/randomstring": "^1.1.6",
    "@types/sinon": "^9.0.0",
    "@types/supertest": "^2.0.9",
    "dotenv": "^8.2.0",
    "eslint-plugin-jest": "^23.9.0",
    "gts": "^2.0.1",
    "jest": "^26.0.1",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.5.0",
    "ts-node": "8.10.1",
    "tsconfig-paths": "3.9.0",
    "tslint": "^6.1.2",
    "typescript": "~3.8.3"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "roots": [
      "src/"
    ],
    "setupFiles": [],
    "testEnvironment": "node",
    "transform": {
      ".*.ts": "ts-jest",
      ".*.tsx": "ts-jest"
    }
  }
}
