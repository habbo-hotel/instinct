{
  "name": "instinct-backend",
  "version": "0.0.4",
  "description": "Shared Nest logic across Instinct apps",
  "main": "build/",
  "scripts": {
    "build": "tsc -p .",
    "deploy:unsafe": "npm run clean && npm run build && cp package.json build/package.json && cp package-lock.json build/package-lock.json && npm publish build",
    "deploy": "npm run clean && npm run test && npm run deploy:unsafe",
    "fix": "npm run clean && gts fix",
    "test": "npm run clean && tsc && gts check && jest --coverage --forceExit && npm run clean",
    "start": "ts-node src/main.ts",
    "clean": "rm -rf build"
  },
  "dependencies": {
    "@nestjs/common": "^7.1.0",
    "@nestjs/core": "^7.1.0",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.1.0",
    "@nestjs/serve-static": "^2.1.1",
    "@nestjs/typeorm": "^7.0.0",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "express": "^4.17.1",
    "form-data": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "moment": "^2.26.0",
    "mysql2": "^2.1.0",
    "passport-jwt": "^4.0.0",
    "randomstring": "^1.1.5",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^7.1.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.152",
    "@types/node": "^14.0.5",
    "@types/randomstring": "^1.1.6",
    "@types/sinon": "^9.0.4",
    "@types/supertest": "^2.0.9",
    "dotenv": "^8.2.0",
    "eslint-plugin-jest": "^23.13.1",
    "gts": "^2.0.2",
    "instinct-rp-interfaces": "0.1.13",
    "jest": "^26.0.1",
    "sinon": "^9.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-node": "8.10.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "~3.9.3"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "roots": [
      "src/"
    ],
    "setupFiles": [],
    "testEnvironment": "node",
    "transform": {
      ".*.ts": "ts-jest",
      ".*.tsx": "ts-jest"
    }
  }
}
